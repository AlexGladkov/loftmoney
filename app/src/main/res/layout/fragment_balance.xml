<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginStart="16dp"
        android:text="@string/balance_available"
        android:textSize="14sp"
        android:textColor="#666664" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="67000₽"
        android:layout_marginStart="16dp"
        android:textSize="48sp"
        android:textColor="#FF9E57"
        android:fontFamily="sans-serif-medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="37dp"
        android:background="#efefef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#666664"
                android:layout_marginStart="15dp"
                android:layout_marginTop="26dp"
                android:text="@string/title_expenses" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#4A90E2"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="26dp"
                android:text="5400₽" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#666664"
                android:layout_marginStart="15dp"
                android:layout_marginTop="26dp"
                android:text="@string/title_incomes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#7ED321"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="26dp"
                android:text="6500₽" />

        </LinearLayout>

    </LinearLayout>
    
    <com.loftblog.loftmoney.custom.DiagramView
        android:id="@+id/dvBalance"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"/>

</LinearLayout>